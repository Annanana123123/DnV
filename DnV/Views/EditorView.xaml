<Window x:Class="DnV.Views.EditorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnV.Views"
        mc:Ignorable="d"
        Title="EditorView" WindowStyle="None" WindowState="Maximized" Width="1920" Height="1080">
    <Window.Resources>
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="{x:Type ToggleButton}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border
                  x:Name="Border" 
                  Grid.ColumnSpan="2"
                  CornerRadius="0"
                  Background="#2A72E9"
                  BorderBrush="#2A72E9"
                  BorderThickness="1" />
                <Border 
                  Grid.Column="0"
                  CornerRadius="0" 
                  Margin="1" 
                  Background="#1C1C25" 
                  BorderBrush="#1C1C25"
                  BorderThickness="0,0,0,0" />
                <Path 
                  x:Name="Arrow"
                  Grid.Column="1"     
                  Fill="White"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
                />
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="{x:Type TextBox}">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

        <Style TargetType="TextBox" x:Key="TextBoxStyle" >
            <Setter Property="Background" Value="#12131A"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2A72E9"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Foreground" Value="#2A72E9"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="TextBox" x:Key="TextBoxStyleRec" >
            <Setter Property="Background" Value="#12131A"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#2A72E9"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Foreground" Value="#2A72E9"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="Label" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#2A72E9"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label" x:Key="LabelStyleCenter">
            <Setter Property="Foreground" Value="#2A72E9"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="{x:Type ComboBox}" TargetType="{x:Type ComboBox}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton 
                            Name="ToggleButton" 
                            Template="{StaticResource ComboBoxToggleButton}" 
                            Grid.Column="2" 
                            Focusable="false"
                            IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                            ClickMode="Press">
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}"
                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                            Margin="3,3,23,3"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox"
                            Style="{x:Null}" 
                            Template="{StaticResource ComboBoxTextBox}" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Center" 
                            Margin="3,3,23,3"
                            Focusable="True" 
                            Background="#1C1C25"
                            Foreground="Green"
                            Visibility="Hidden"
                            IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup 
                            Name="Popup"
                            Placement="Bottom"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            AllowsTransparency="True" 
                            Focusable="False"
                            PopupAnimation="Slide">
                                <Grid Name="DropDown"
                              SnapsToDevicePixels="True"                
                              MinWidth="{TemplateBinding ActualWidth}"
                              MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border 
                                x:Name="DropDownBorder"
                                Background="#1C1C25"

                                BorderThickness="1"
                                BorderBrush="#2A72E9"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0"/>
                                <Setter TargetName="DropDownBorder" Property="Margin" Value="0,2,0,0"/>
                            </Trigger>
                            <Trigger Property="IsEditable"  Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>

        <Style x:Key="{x:Type ComboBoxItem}" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border Name="Border"
                              Padding="2"
                              SnapsToDevicePixels="true">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#FF4F4F4F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#12131A">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="Истории"
                        FontSize="27"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="0 0 1 0"
                        Foreground="#2A72E9"
                        Padding="10 0 10 0"
                        Command="{Binding NewHistoryBtn}" FontFamily="Candara"/>
                <Button Content="Комнаты"
                        FontSize="27"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="0 0 1 0"
                        Foreground="#2A72E9"
                        Padding="10 0 10 0"
                        Command="{Binding NewRoomBtn}" FontFamily="Candara"/>
                <Button Content="События"
                        FontSize="27"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="0 0 1 0"
                        Foreground="#2A72E9"
                        Padding="10 0 10 0"
                        Command="{Binding NewEventBtn}" FontFamily="Candara"/>
                <Button Content="Герои"
                        FontSize="27"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="0 0 1 0"
                        Foreground="#2A72E9"
                        ToolTip="Начать битву"
                        Padding="10 0 10 0"
                        Command="{Binding ShowListHeroBtn}"/>
                <Button Content="NPC"
                        FontSize="27"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="0 0 1 0"
                        Foreground="#2A72E9"
                        ToolTip="Начать битву"
                        Padding="10 0 10 0"
                        Command="{Binding ShowListNPCBtn}"/>
                <Button Content="NPC в комнате"
                        FontSize="27"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="0 0 1 0"
                        Foreground="#2A72E9"
                        ToolTip="Начать битву"
                        Padding="10 0 10 0"
                        Command="{Binding ShowListNPCInRoomBtn}"/>
            </StackPanel>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          Width="300"
                          FontSize="20"
                          ItemsSource="{Binding ComboBoxHistory}"
                          SelectedItem="{Binding SelectItemHistory, Mode=TwoWay}">
                </ComboBox>
                <Button Content="OK"
                        FontSize="30"
                        FontFamily="Calibri"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="1 0 0 1"
                        Foreground="#2A72E9"
                        ToolTip="Ok"
                        VerticalContentAlignment="Center"
                        MinWidth="50"
                        Command="{Binding ComboOk}"
                        Padding="0 0 0 0"/>
            </StackPanel>
            <Rectangle Grid.Column="0"
                       Height="1"
                       VerticalAlignment="Bottom"
                       Fill="#2A72E9"/>
            <Rectangle Grid.Column="1"
                       Height="1"
                       VerticalAlignment="Bottom"
                       Fill="#2A72E9"/>
        </Grid>
        <Grid Grid.Row="1" Margin="0 30 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.4*"/>
                <ColumnDefinition Width="70"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"
                        Margin="0 0 0 0"
                        Orientation="Vertical">
                <Button Content="&lt;"
                        FontSize="40"
                        MinHeight="70"
                        FontFamily="Calibri"
                        Background="#12131A"
                        BorderBrush="#2A72E9"
                        BorderThickness="0"
                        Foreground="#2A72E9"
                        ToolTip="Далее"
                        MinWidth="50"
                        Command="{Binding BackRoomBtn}"/>
            </StackPanel>
            <Grid Grid.Column="1"    
                  Grid.ColumnSpan="2"
                  Background="#1C1C25"
                  Visibility="{Binding VisibilityHistoryEditor, FallbackValue=Hidden}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DataGrid Grid.Row="0"
                              Grid.Column="0"
                              Grid.RowSpan="5"
                              Background="#12131A"
                              x:Name="GridHistory"
                              ItemsSource="{Binding HistoryTable, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              ScrollViewer.CanContentScroll="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              IsReadOnly="False"
                              Margin="0 0 20 0"
                              ScrollViewer.VerticalScrollBarVisibility="Hidden"
                              ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                              GridLinesVisibility="all"
                              VerticalGridLinesBrush="#2A72E9"
                              SelectedItem="{Binding CurrentHistory, Mode=TwoWay}"
                              FontSize="20">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGrid}}" TargetType="{x:Type DataGrid}">
                            <Setter Property="HeadersVisibility" Value="Column" />
                        </Style>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#1C1C25" />
                            <Setter Property="Foreground" Value="#888888"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="#32323d"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                        <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="{x:Type DataGridRow}">
                            <Setter Property="Background" Value="#12131A"/>
                            <Setter Property="Foreground" Value="#999999"/>
                            <Setter Property="BorderBrush" Value="#32323d"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                        <Style x:Key="NameCellStyle" TargetType="{x:Type DataGridCell}">
                            <Style.Setters>
                                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                            </Style.Setters>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Width="50" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Название" Width="*" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="Видно" Width="100" Binding="{Binding Visibility}" CellStyle="{StaticResource NameCellStyle}"/>
                        <DataGridTextColumn Header="Картинка" Width="100" Binding="{Binding Imag}" CellStyle="{StaticResource NameCellStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBox Text="Id истории"
                         FontSize="30"
                         Grid.Column="1"
                         Grid.Row="0"
                         Foreground="#AAAAAA"
                         TextWrapping="Wrap"
                         BorderThickness="0"
                         IsReadOnly="True"
                         Background="#1C1C25"
                         VerticalContentAlignment="Center"
                         ScrollViewer.CanContentScroll="True"
                         FontFamily="Verdana"/>
                <TextBox Text="{Binding Id}"
                         FontSize="20"
                         Grid.Column="2"
                         Grid.Row="0"
                         Foreground="#AAAAAA"
                         BorderThickness="1"
                         BorderBrush="#2A72E9"
                         Background="#1C1C25"
                         Margin="0 0 20 0"
                         IsReadOnly="True"
                         VerticalContentAlignment="Center"
                         ScrollViewer.CanContentScroll="True"
                         FontFamily="Verdana"/>
                <TextBox Text="Название истории"
                             FontSize="30"
                             Grid.Column="1"
                             Grid.Row="1"
                             Foreground="#AAAAAA"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             IsReadOnly="True"
                             Background="#1C1C25"
                             VerticalContentAlignment="Center"
                             ScrollViewer.CanContentScroll="True"
                             FontFamily="Verdana"/>
                <TextBox Text="{Binding Name}"
                             FontSize="20"
                             Grid.Column="2"
                             Grid.Row="1"
                             Foreground="#AAAAAA"
                             BorderThickness="1"
                             BorderBrush="#2A72E9"
                             Background="#1C1C25"
                             Margin="0 0 20 0"
                             VerticalContentAlignment="Center"
                             ScrollViewer.CanContentScroll="True"
                             FontFamily="Verdana"/>
                <TextBox Text="Показать в списке"
                             FontSize="30"
                             Grid.Column="1"
                             Grid.Row="2"
                             Foreground="#AAAAAA"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             IsReadOnly="True"
                             Background="#1C1C25"
                             VerticalContentAlignment="Center"
                             ScrollViewer.CanContentScroll="True"
                             FontFamily="Verdana"/>
                <TextBox Text="{Binding VisibilityHistory, FallbackValue=0}"
                             FontSize="20"
                             Grid.Column="2"
                             Grid.Row="2"
                             Foreground="#AAAAAA"
                             BorderThickness="1"
                             BorderBrush="#2A72E9"
                             Background="#1C1C25"
                             Margin="0 0 20 0"
                             VerticalContentAlignment="Center"
                             ScrollViewer.CanContentScroll="True"
                             FontFamily="Verdana"/>
                <TextBox Text="Картинка"
                             FontSize="30"
                             Grid.Column="1"
                             Grid.Row="3"
                             Foreground="#AAAAAA"
                             TextWrapping="Wrap"
                             BorderThickness="0"
                             IsReadOnly="True"
                             Background="#1C1C25"
                             VerticalContentAlignment="Center"
                             ScrollViewer.CanContentScroll="True"
                             FontFamily="Verdana"/>
                <TextBox Text="{Binding Imag, FallbackValue=new.png}"
                             FontSize="20"
                             Grid.Column="2"
                             Grid.Row="3"
                             Foreground="#AAAAAA"
                             BorderThickness="1"
                             BorderBrush="#2A72E9"
                             Margin="0 0 20 0"
                             Background="#1C1C25"
                             VerticalContentAlignment="Center"
                             ScrollViewer.CanContentScroll="True"
                             FontFamily="Verdana"/>
                <StackPanel Orientation="Horizontal"
                                Grid.Column="2"
                                Grid.Row="4"
                                Height="70"
                                Margin="0 20 0 0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top">
                    <Button Content="Новая"
                                FontSize="27"
                                Background="#1C1C25"
                                BorderBrush="#2A72E9"
                                BorderThickness="1"
                                Foreground="#2A72E9"
                                Padding="10 0 10 0"
                                Command="{Binding NewHistorySaveBtn}"
                                FontFamily="Candara"/>
                    <Button Content="Сохранить"
                                FontSize="27"
                                Background="#1C1C25"
                                BorderBrush="#2A72E9"
                                BorderThickness="1"
                                Foreground="#2A72E9"
                                Margin="20 0 20 0"
                                Padding="10 0 10 0"
                                Command="{Binding HistorySaveBtn}"
                                FontFamily="Candara"/>
                </StackPanel>
                
            </Grid>
            <Grid Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Visibility="{Binding VisibilityRoomEditor, FallbackValue=idden}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <TextBox    Text="{Binding HeadRoom, FallbackValue=Заголовок}"
                            Grid.ColumnSpan="3"
                            Grid.Row="0"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="0 0 0 10"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding ImagRoom, FallbackValue=imag.png;imag2.png}"
                            Grid.Row="1"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="0 0 10 0"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding SoundRoom, FallbackValue=sound.mp3;sound2.mp3}"
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="10 0 0 0"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding TextRoom}"
                            Grid.ColumnSpan="3"
                            Grid.RowSpan="3"
                            Grid.Row="2"
                            FontSize="30"
                            AcceptsReturn="True"
                            Margin="0 10 0 0 "
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <Button Content="Сохранить"
                        FontSize="27"
                        Grid.Column="0"
                        Grid.Row="5"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        BorderThickness="1"
                        Foreground="#2A72E9"
                        Margin="10"
                        Padding="10 0 10 0"
                        Command="{Binding SaveRoomBtn}" FontFamily="Candara"/>
                <Button Content="Отмена"
                        FontSize="27"
                        Grid.Column="2"
                        Grid.Row="5"
                        Background="#1C1C25"
                        BorderBrush="#2A72E9"
                        Margin="10"
                        BorderThickness="1"
                        Foreground="#2A72E9"
                        Padding="10 0 10 0"
                        Command="{Binding CloseRoomBtn}" FontFamily="Candara"/>
                <Rectangle Fill="#12131A"
                           Grid.Row="6"
                           Grid.ColumnSpan="3"/>
                <Canvas Grid.Row="6"
                        Grid.ColumnSpan="3">
                    <ItemsControl ItemsSource="{Binding StackPanelImag}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas  IsItemsHost="True"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style>
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="0"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="0 20 20 20"
                                        Height="160"
                                        Width="240"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Command="{Binding ViewImag}">
                                    <Image Source="{Binding SourceImag}"/>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Canvas>
                
            </Grid>
            <Grid Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Visibility="{Binding VisibilityEventEditor, FallbackValue=Hidden}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>
                <TextBox    Text="{Binding HeadEvent, FallbackValue=Событие}"
                            Grid.Column="0"
                            Grid.Row="0"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="0 0 10 10"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding IdRoomEvent, FallbackValue=0}"
                            Grid.Column="1"
                            Grid.Row="0"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="10 0 0 10"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding ImagEvent, FallbackValue=imag.png;imag2.png}"
                            Grid.Row="1"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="0 0 10 0"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding SoundEvent}"
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="30"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Foreground="#AAAAAA"
                            TextWrapping="Wrap"
                            BorderThickness="1"
                            Margin="10 0 0 0"
                            BorderBrush="#2A72E9"
                            Background="#1C1C25"
                            ScrollViewer.CanContentScroll="True"
                            FontFamily="Verdana"/>
                <TextBox    Text="{Binding TextEvent}"
